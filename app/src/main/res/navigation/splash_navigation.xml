<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/splash_navigation"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.kinderjoey.cookiez.ui.splash.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_onBoardingFragment"
            app:destination="@id/onBoardingFragment" />
        <action
            android:id="@+id/action_splashFragment_to_authActivity"
            app:destination="@id/authActivity" />
        <action
            android:id="@+id/action_splashFragment_to_baseActivity"
            app:destination="@id/baseActivity" />
    </fragment>
    <fragment
        android:id="@+id/onBoardingFragment"
        android:name="com.kinderjoey.cookiez.ui.onboard.OnBoardingFragment"
        android:label="fragment_on_boarding"
        tools:layout="@layout/fragment_on_boarding" >
        <action
            android:id="@+id/action_onBoardingFragment_to_authActivity"
            app:destination="@id/authActivity" />
    </fragment>
    <activity
        android:id="@+id/authActivity"
        android:name="com.kinderjoey.cookiez.ui.auth.AuthActivity"
        android:label="activity_auth"
        tools:layout="@layout/activity_auth" >
        <argument
            android:name="AuthIntentCode"
            app:argType="string" />
    </activity>
    <activity
        android:id="@+id/baseActivity"
        android:name="com.kinderjoey.cookiez.ui.BaseActivity"
        android:label="BaseActivity"
        tools:layout="@layout/activity_base"/>
</navigation>