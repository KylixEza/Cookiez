<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/ic_main_background"
    tools:context=".ui.splash.SplashFragment">

    <ImageView
        android:id="@+id/iv_icon_splash"
        android:layout_width="156dp"
        android:layout_height="156dp"
        android:layout_marginBottom="120dp"
        android:src="@drawable/ic_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/iv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-26dp"
        android:src="@drawable/ic_splash_title"
        app:layout_constraintStart_toStartOf="@id/iv_icon_splash"
        app:layout_constraintTop_toBottomOf="@id/iv_icon_splash"
        app:layout_constraintEnd_toEndOf="@id/iv_icon_splash"/>

</androidx.constraintlayout.widget.ConstraintLayout>