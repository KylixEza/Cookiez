<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kinderjoey.cookiez">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Cookiez"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Cookiez">
        <activity
            android:name=".ui.profile.EditProfileActivity"
            android:exported="true" />
        <activity
            android:name=".ui.search.SearchActivity"
            android:exported="true" />
        <activity
            android:name=".ui.BaseActivity"
            android:exported="true"
            android:label="@string/title_activity_base"></activity>
        <activity
            android:name=".ui.profile.wallet.TopUpActivity"
            android:exported="true" />
        <activity
            android:name=".ui.history.HistoryActivity"
            android:exported="true" />
        <activity
            android:name=".ui.detail.DetailActivity"
            android:exported="true" />
        <activity
            android:name=".ui.category.CategoryActivity"
            android:exported="true" />
        <activity
            android:name=".ui.profile.wallet.CWalletActivity"
            android:exported="true" />

        <activity
            android:name=".ui.splash.SplashActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.MainActivity"
            android:exported="true" />
    </application>

</manifest>